executable satiscalculate
  main-is:             Main.hs

  other-modules:       Cli
                     , Cli.YesNo
                     , Cli.Qna
                     , Cli.ValidInput
                     , Cli.Parser
                     , Factory
                     , Recipe
                     , RecipeTree
                     , Db
                     , Db.Utils
                     , App

